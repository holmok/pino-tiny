{
  "name": "pino-tiny",
  "version": "2.0.0",
  "description": "a very minimalist output for pino logger",
  "main": "dist/index.js",
  "bin": {
    "pino-tiny": "./dist/index.js"
  },
  "engines": {
    "node": ">=10",
    "yarn": ">=1.22"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "nyc --check-coverage --reporter=text --reporter=text-summary --reporter=html --clean --branches=100 --functions=100 --lines=100 --statements=100 -- ts-node node_modules/tape/bin/tape tests/*.test.ts | tap-nyc",
    "lint": "ts-standard src/**/*.ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rm -rf dist/",
    "build": "yarn clean && yarn compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holmok/pino-tiny.git"
  },
  "keywords": [
    "pino",
    "minimalist",
    "log",
    "logger",
    "logging"
  ],
  "author": "Christopher Holmok <christopher@holmok.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/holmok/pino-tiny/issues"
  },
  "homepage": "https://github.com/holmok/pino-tiny#readme",
  "devDependencies": {
    "@types/dateformat": "^3.0.1",
    "@types/node": "^15.3.1",
    "@types/pump": "^1.1.1",
    "@types/sinon": "^10.0.0",
    "@types/split2": "^3.2.0",
    "@types/tape": "^4.13.0",
    "@types/through2": "^2.0.36",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "tap-nyc": "^1.0.3",
    "tape": "^5.2.2",
    "ts-node": "^9.1.1",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.4",
    "yarn": "^1.22.10"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "dateformat": "^4.5.1",
    "pump": "^3.0.0",
    "split2": "^3.1.1",
    "through2": "4"
  }
}
